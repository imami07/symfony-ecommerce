<div class="grid grid-cols-1 gap-6">
    {% for category in categories %}
        <a href="{{ path('app_shop_products', {'category': category.id}) }}" class="flex items-center p-3 -m-3 transition duration-150 ease-in-out rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
            <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 rounded-full overflow-hidden">
                {% if category.image %}
                    <img class="w-full h-full object-cover" src="{{ asset('images/categories/' ~ category.image) }}" alt="{{ category.name }}">
                {% else %}
                    <div class="w-full h-full bg-gray-300 dark:bg-gray-600 flex items-center justify-center">
                        <svg class="w-6 h-6 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
                        </svg>
                    </div>
                {% endif %}
            </div>
            <div class="ml-4">
                <p class="text-base font-medium text-gray-900 dark:text-gray-100">
                    {{ category.name }}
                </p>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                    {{ category.description|slice(0, 50) }}{% if category.description|length > 50 %}...{% endif %}
                </p>
            </div>
        </a>
    {% endfor %}
</div>

