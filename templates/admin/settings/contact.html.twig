{% extends 'admin/base.html.twig' %}

{% block title %}Paramètres de contact{% endblock %}

{% block page_title %}Paramètres de contact{% endblock %}

{% block body %}
    {% embed 'admin/_partials/_table_layout.html.twig' %}
        {% block table_title %}Paramètres de contact du site{% endblock %}
        
        {% block table_body %}
            {{ form_start(form, {'attr': {'class': 'space-y-8 divide-y divide-gray-200 dark:divide-gray-700'}}) }}
                <div class="space-y-8 divide-y divide-gray-200 dark:divide-gray-700 sm:space-y-5">
                    <div class="pt-8 space-y-6 sm:pt-10 sm:space-y-5">
                        <div class="space-y-6 sm:space-y-5">
                            {{ form_row(form.contactEmail, {'attr': {'class': 'max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                            {{ form_row(form.contactPhone, {'attr': {'class': 'max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                            {{ form_row(form.contactAddress, {'attr': {'class': 'max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                        </div>
                    </div>
                </div>

                <div class="pt-5">
                    <div class="flex justify-end">
                        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-600">
                            Enregistrer
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
