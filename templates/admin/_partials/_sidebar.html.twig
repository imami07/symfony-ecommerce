    <div class="flex items-center justify-center mt-8">
        {% include '_partials/_app_logo.html.twig' %}
    </div>

    <nav class="mt-10">
        {% set route = app.request.get('_route') %}
        <a class="flex items-center mt-4 py-2 px-6 hover:bg-gray-700 dark:hover:bg-gray-600 bg-opacity-25 text-gray-100 {{ route starts with 'app_admin_dashboard' ? 'bg-gray-700 dark:bg-gray-600' : '' }}" href="{{ path('app_admin_dashboard') }}">
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
            </svg>

            <span class="mx-3">Tableau de bord</span>
        </a>

        <a class="flex items-center mt-4 py-2 px-6 hover:bg-gray-700 dark:hover:bg-gray-600 bg-opacity-25 text-gray-100 {{ route starts with 'app_admin_product' ? 'bg-gray-700 dark:bg-gray-600' : '' }}" href="{{ path('app_admin_product_index') }}">
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />
