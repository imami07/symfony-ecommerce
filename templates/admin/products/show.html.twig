{% extends 'admin/base.html.twig' %}

{% block title %}Détails du produit{% endblock %}

{% block page_title %}Détails du produit{% endblock %}

{% block body %}
    {% embed 'admin/_partials/_table_layout.html.twig' %}
        {% block table_title %}{{ product.name }}{% endblock %}
        
        {% block table_actions %}
            <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-flex items-center mr-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
                Modifier
            </a>
            <a href="{{ path('app_admin_product_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded inline-flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Retour à la liste
            </a>
        {% endblock %}

        {% block table_body %}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Informations générales</h3>
                    <dl class="mt-2 border-t border-b border-gray-200 dark:border-gray-700 divide-y divide-gray-200 dark:divide-gray-700">
                        <div class="py-3 flex justify-between text-sm font-medium">
                            <dt class="text-gray-500 dark:text-gray-400">ID</dt>
                            <dd class="text-gray-900 dark:text-gray-100">{{ product.id }}</dd>
                        </div>
                        <div class="py-3 flex justify-between text-sm font-medium">
                            <dt class="text-gray-500 dark:text-gray-400">Nom</dt>
                            <dd class="text-gray-900 dark:text-gray-100">{{ product.name }}</dd>
                        </div>
                        <div class="py-3 flex justify-between text-sm font-medium">
                            <dt class="text-gray-500 dark:text-gray-400">Prix</dt>
                            <dd class="text-gray-900 dark:text-gray-100">{{ product.price|number_format(2, ',', ' ') }} €</dd>
                        </div>
                        <div class="py-3 flex justify-between text-sm font-medium">
                            <dt class="text-gray-500 dark:text-gray-400">Stock</dt>
                            <dd class="text-gray-900 dark:text-gray-100">{{ product.stock }}</dd>
                        </div>
                        <div class="py-3 flex justify-between text-sm font-medium">
                            <dt class="text-gray-500 dark:text-gray-400">Catégorie</dt>
                            <dd class="text-gray-900 dark:text-gray-100">{{ product.category.name }}</dd>
                        </div>
                        <div class="py-3 flex justify-between text-sm font-medium">
                            <dt class="text-gray-500 dark:text-gray-400">Actif</dt>
                            <dd class="text-gray-900 dark:text-gray-100">{{ product.active ? 'Oui' : 'Non' }}</dd>
                        </div>
                        <div class="py-3 flex justify-between text-sm font-medium">
                            <dt class="text-gray-500 dark:text-gray-400">Mis en avant</dt>
                            <dd class="text-gray-900 dark:text-gray-100">{{ product.featured ? 'Oui' : 'Non' }}</dd>
                        </div>
                    </dl>
                </div>
                <div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Description</h3>
                    <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        {{ product.description|nl2br }}
                    </div>
                    {% if product.image %}
                        <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-gray-100">Image</h3>
                        <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="mt-2 max-w-full h-auto">
                    {% endif %}
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
