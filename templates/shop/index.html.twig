{% extends 'base.html.twig' %}

{% block title %}
    Mon nouveau titre
{% endblock %}

{% block body %}
    {% include '_partials/_hero.html.twig' %}
    <div class="container mx-auto px-4 py-8">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Produits en vedette</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {#    TODO: Il faut lister les vrais produits ici        #}
            {% for product in range(1,4) %}
                <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden">
                    <img src="" alt="{{ product }}" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">{{ product }}</h3>
                        <p class="text-gray-600 dark:text-gray-300 mb-4">{{ product }}...</p>
                        <div class="flex justify-between items-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ product }} €</span>
                            <a href="" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                Voir détails
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="col-span-3 text-center text-gray-600 dark:text-gray-300">Aucun produit en vedette pour le moment.</p>
            {% endfor %}
        </div>

        <h2 class="text-3xl font-bold mt-12 mb-6 text-gray-900 dark:text-white">Catégories</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {#  TODO: Il faut afficher les vraies categories venant de la base de données          #}
            {% for category in ['Categorie 1', 'Categorie 2'] %}
                <a href="" class="bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-center py-4 rounded text-gray-900 dark:text-white">
                    {{ category }}
                </a>
            {% else %}
                <p class="col-span-4 text-center text-gray-600 dark:text-gray-300">Aucune catégorie disponible pour le moment.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
