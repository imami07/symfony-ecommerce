{% extends 'base.html.twig' %}

{% block title %}Commande confirmée{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden">
        <div class="text-center p-6">
            <svg class="mx-auto h-12 w-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h1 class="mt-4 text-2xl font-bold text-gray-900 dark:text-gray-100">Commande confirmée</h1>
            <p class="mt-2 text-gray-600 dark:text-gray-300">Merci pour votre achat !</p>
        </div>
        <div class="border-t border-gray-200 dark:border-gray-700 p-6">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Détails de la commande</h2>
            <dl class="space-y-3">
                <div class="flex justify-between">
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Numéro de commande</dt>
                    <dd class="text-sm text-gray-900 dark:text-gray-100">{{ order.id }}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Date</dt>
                    <dd class="text-sm text-gray-900 dark:text-gray-100">{{ order.createdAt|date('d/m/Y H:i') }}</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total</dt>
                    <dd class="text-sm text-gray-900 dark:text-gray-100">{{ order.totalAmount|number_format(2, ',', ' ') }} €</dd>
                </div>
            </dl>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 px-6 py-4">
            <a href="{{ path('app_shop_products') }}" class="block text-center text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300">Continuer mes achats</a>
        </div>
    </div>
</div>
{% endblock %}
