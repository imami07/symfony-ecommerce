{% extends 'base.html.twig' %}

{% block title %}Découvrez nos catégories{% endblock %}

{% block body %}
    <div class="bg-gray-100 dark:bg-gray-900 min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <h1 class="text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-8 text-center">Nos Catégories</h1>
            <p class="text-xl text-gray-600 mb-12 text-center max-w-3xl mx-auto">Explorez notre sélection de catégories et trouvez les produits qui correspondent à vos besoins.</p>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for category in categories %}
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
                        <a href="{{ path('app_shop_products', {'category': category.id}) }}" class="block">
                            <img src="{{ category.image ? asset(category.image) : asset('images/default-category.png') }}" alt="{{ category.name }}" class="w-full h-48 object-cover">
                            <div class="p-6">
                                <h2 class="text-2xl font-semibold text-gray-800 mb-2">{{ category.name }}</h2>
                                <p class="text-gray-600">{{ category.description|slice(0, 100) }}{% if category.description|length > 100 %}...{% endif %}</p>
                            </div>
                        </a>
                    </div>
                {% else %}
                    <p class="col-span-3 text-center text-gray-600 text-xl">Aucune catégorie disponible pour le moment.</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
